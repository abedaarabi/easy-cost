generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:Likeme-likeme654@127.0.0.1:3306/prisma"
}

enum UserType {
  CompanyUser
  Client
  comapanyAdmin
}

model Company {
  id          String        @id @default(uuid())
  createdAt   DateTime      @default(now())
  name        String
  country     String
  logo        String
  User        User[]
  InvitedUser InvitedUser[]
}

model User {
  id           String        @id @default(uuid())
  name         String        @unique
  email        String
  avatar       String
  createdAt    DateTime      @default(now())
  materialName Material[]
  projectName  Project[]
  userType     UserType
  companyId    String
  Company      Company       @relation(fields: [companyId], references: [id])
  InvitedUser  InvitedUser[]
}

model InvitedUser {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  Company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
  Project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  token     String
}

model Material {
  id             String           @id @default(uuid())
  materialName   String
  unit           String
  supplier       String
  createdAt      DateTime         @default(now())
  price          Int
  priceUnit      String
  image          String
  User           User?            @relation(fields: [userId], references: [id])
  userId         String?
  ProjecMaterial ProjecMaterial[]
  workByhour     Int 

  @@unique([materialName, userId])
}

model Project {
  id             String           @id @default(uuid())
  projectName    String
  createdAt      DateTime         @default(now())
  User           User?            @relation(fields: [userId], references: [id])
  userId         String?
  ProjecMaterial ProjecMaterial[]
  InvitedUser    InvitedUser[]
}

model ProjecMaterial {
  id         String   @id @default(uuid())
  material   Material @relation(fields: [materialId], references: [id])
  project    Project  @relation(fields: [projectId], references: [id])
  materialId String
  projectId  String
  createdAt  DateTime @default(now())
  profit     Int      @default(0) // percentage added %
}
